<?xml version="1.0"?>
<Installer>
    <Name>Quran Companion</Name>
    <Version>1.0-alpha</Version>
    <Title>Quran Companion</Title>
    <Publisher>0xzer0x</Publisher>
    <ProductUrl>http://github.com/0xzer0x/quran-companion.git</ProductUrl>

    <InstallerApplicationIcon>app-icon</InstallerApplicationIcon>
    <StartMenuDir>Quran Companion</StartMenuDir>
    <MaintenanceToolName>QCMaintenanceTool</MaintenanceToolName>
    <AllowNonAsciiCharacters>true</AllowNonAsciiCharacters>

    <TargetDir>@HomeDir@/QuranCompanion</TargetDir>
	<RunProgram>@TargetDir@/quran-companion.exe</RunProgram>
    
    <RemoteRepositories>
     <Repository>
             <Url>https://gitlab.com/0xzer0x/qurancompanionqif/-/raw/main/windows</Url>
             <Enabled>1</Enabled>
             <DisplayName>Windows Repository</DisplayName>
     </Repository>
	</RemoteRepositories>

</Installer>
