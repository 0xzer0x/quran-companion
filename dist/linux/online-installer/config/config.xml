<?xml version="1.0"?>
<Installer>

    <Name>Quran Companion</Name>
    <Version>1.0.0-alpha</Version>
    <Title>Quran Companion</Title>
    <Publisher>0xzer0x</Publisher>
    <ProductUrl>http://github.com/0xzer0x/quran-companion.git</ProductUrl>

    <InstallerWindowIcon>qc-icon</InstallerWindowIcon>
    <MaintenanceToolName>QCMaintenanceTool</MaintenanceToolName>
    <AllowNonAsciiCharacters>true</AllowNonAsciiCharacters>
    <TargetDir>@HomeDir@/QuranCompanion</TargetDir>
    <RunProgram>@TargetDir@/quran-companion.sh</RunProgram>
    <RemoteRepositories>
     <Repository>
             <Url>https://gitlab.com/0xzer0x/qurancompanionqif/-/raw/main/linux</Url>
             <Enabled>1</Enabled>
             <DisplayName>Linux Repository</DisplayName>
     </Repository>
	</RemoteRepositories>

</Installer>
