<?xml version="1.0" encoding="UTF-8"?>
<Package>
    <DisplayName>Quran Companion</DisplayName>
    <Description>Quran Companion application files.</Description>
    <Dependencies>com.zer0x.qcassets, com.qt.libs</Dependencies>
    <Version>1.0-alpha</Version>
    <ReleaseDate>2023-04-20</ReleaseDate>
    <Licenses>
        <License name="LGPL3 Agreement" file="license.txt" />
    </Licenses>
    <Default>true</Default>
     <Operations>
		   <Operation name="CreateDesktopEntry">
		    <Argument>@HomeDir@/.local/share/applications/qurancompanion.desktop</Argument>
			<Argument>
Name=Quran Companion
Exec=@TargetDir@/quran-companion
Terminal=false
Icon=@TargetDir@/qc-icon.png
Type=Application
Categories=Education;
			</Argument>
		   </Operation>
	 </Operations>

</Package>
