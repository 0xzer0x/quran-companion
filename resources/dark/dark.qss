QDialogButtonBox {
  dialogbuttonbox-buttons-have-icons: 0;
}

QLineEdit {
  placeholder-text-color: #c0c0c0;
}

#searchTab,
#filterTab,
#generalTab,
#readerTab,
#shortcutsTab {
  background-color: #2a2a2a;
}

QAbstractScrollArea#tedTafsir {
  border: 1px solid #222222;
  border-radius: 4px;
}

/* --------- Player Styles --------- */

QFrame#framePlayer {
  background-color: #202020;
  border-radius: 8px;
}

QPushButton:hover {
  background-color: #3b3b3b;
}

QPushButton:disabled {
  background-color: #515151;
}

QPushButton:pressed {
  background-color: #4c4c4c;
}

QPushButton#btnPlay:disabled,
QPushButton#btnPause:disabled,
QPushButton#btnStop:disabled {
  border-style: inset;
}

QPushButton {
  background-color: palette(button);
  border: 1px solid #444444;
  border-radius: 4px;
  min-width: 72px;
  min-height: 25px;
}

QComboBox {
  border: 1px solid #444444;
  border-radius: 3px;
  padding: 1px 3px 1px 3px;
}

QComboBox::drop-down {
  subcontrol-origin: padding;
  subcontrol-position: top right;
  width: 15px;
  border-radius: 3px;
}

QComboBox::down-arrow {
  image: url(":/resources/dark/icons/arrow-down.svg");
}

/* --------- Reader Styles --------- */

QSplitter#centeralSplitter {
  border-radius: 7px;
  background-color: #202020;
}

/* VERTICAL SCROLLBAR */
QScrollBar:vertical {
  border: none;
  background: #202020;
  width: 10px;
  margin: 0;
  border-radius: 3px;
}

/*  HANDLE BAR VERTICAL */
QScrollBar::handle:vertical {
  background-color: #3b3b3b;
  min-height: 10px;
  border-radius: 4px;
}

QScrollBar::handle:vertical:hover {
  background-color: #515151;
}

QScrollBar::handle:vertical:pressed {
  background-color: #515151;
}

/* BTN TOP - SCROLLBAR */
QScrollBar::sub-line:vertical {
  border: none;
  background: none;
  height: 0px;
  subcontrol-position: top;
  subcontrol-origin: margin;
}

/* BTN BOTTOM - SCROLLBAR */
QScrollBar::add-line:vertical {
  border: none;
  background: none;
  height: 0px;
  subcontrol-position: bottom;
  subcontrol-origin: margin;
}

/* HORIZONTAL SCROLLBAR */
QScrollBar:horizontal {
  border: none;
  border-radius: 4px;
  background: #202020;
  height: 10px;
  margin: 0;
}

/*  HANDLE BAR HORIZONTAL */
QScrollBar::handle:horizontal {
  background-color: #3b3b3b;
  min-width: 2px;
  border-radius: 4px;
}

QScrollBar::handle:horizontal:hover {
  background-color: #515151;
}

/* BTN RIGHT - SCROLLBAR */
QScrollBar::add-line:horizontal {
  background: transparent;
  width: 0;
  subcontrol-position: right;
  subcontrol-origin: margin;
}

/* BTN LEFT - SCROLLBAR */
QScrollBar::sub-line:horizontal {
  background: transparent;
  width: 0;
  subcontrol-position: left;
  subcontrol-origin: margin;
}

/* ------------ ListView Styles ------------ */

QListView#listViewSurahs {
  font-size: 12pt;
  spacing: 5px;
  border-radius: 1px;
  outline: none;
}

QListView#listViewSurahs::item {
  border-radius: 3px;
  padding: 5px;
  outline: none;
}

QListView#listViewSurahs::item:selected,
QListView#listViewSurahs::item:hover:selected {
  border: 1px solid #8ab4f8;
  background-color: rgba(138, 180, 248, 90);
}

QListView#listViewSurahs::item:hover {
  background-color: rgba(138, 180, 248, 40);
}

QListView#listViewBookmarkedSurahs {
  outline: none;
  font-size: 10pt;
  background-color: transparent;
}

QListView#listViewBookmarkedSurahs::item {
  text-align: center;
  color: #dfdfdf;
  margin: 0px 5px 0px 0px;
  background-color: palette(button);
  border: 1px outset rgb(47, 47, 47);
  border-radius: 8px;
}

QListView#listViewBookmarkedSurahs::item:selected,
QListView#listViewBookmarkedSurahs::item:hover:selected {
  border-style: solid;
  border-color: palette(highlight);
  outline: 0;
}

QListView#listViewBookmarkedSurahs::item:hover {
  background-color: #26364f;
  border-color: #26364f;
}

/* --------------- Toggle Styles --------------- */

QPushButton#btnToggleNav {
  outline: none;
  border: none;
  border-radius: 0px;
  background-color: transparent;
  min-height: 1.1em;
  min-width: 40px;
}

QPushButton#btnToggleNav:!checked:hover {
  background-color: #3b3b3b;
}

QPushButton#btnToggleNav:checked {
  border: 1px solid palette(highlight);
  background-color: palette(highlight);
}

/* --------------- Notification Popup Styles --------------- */

QFrame#Popup {
  background: palette(highlight);
  border-radius: 6px;
}

QFrame#Popup * {
  color: rgb(47, 47, 47);
}

QDialog#dlgVOTD:hover {
  background: rgba(138, 180, 248, 40);
}

/* --------------- Khatmah Dialog Styles --------------- */

*[khatmah="true"] {
  border: 1px outset #444444;
  background-color: #2a2a2a;
  border-radius: 5px;
}

*[bookmark="true"] {
  background-color: #2a2a2a;
  border-radius: 5px;
}

#InputField {
  border: none;
  background: transparent;
}

#InputField:focus {
  border: 1px solid palette(highlight);
  border-radius: 3px;
  background: palette(window);
}
